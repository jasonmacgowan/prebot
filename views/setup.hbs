<h1>Configuration Editor</h1>

<div class="text-left">
  <form method="POST">
    <div class="form-group">
      <div class="form-group-header">
        <label for="GHE_URL">GitHub Url (leave blank for GitHub.com)</label>
      </div>
      <div class="form-group-body">
        <input class="form-control" name="GHE_URL" type="text" placeholder="https://github.com/" />
      </div>
    </div>

    {{#each params}}
    {{!-- Dynamically determine which form control to render for each field --}}
    {{> (lookup . 'inputType')}}
    {{/each}}

    <div class="form-actions">
      <button type="submit" class="btn btn-primary">Next</button>
    </div>
  </form>
</div>